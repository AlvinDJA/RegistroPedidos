<Window x:Class="RegistroPedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroPedidos"
        mc:Ignorable="d"
        Title="Pedidos - Pantalla Principal" Height="230" Width="430" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <StackPanel Orientation = "Horizontal">
                <Menu Height="18">
                    <MenuItem Header="Registros" >
                        <MenuItem x:Name= "rPedidosMenuItem" Header="_Registro Pedidos" Click="rPedidosMenuItem_Click"/>
                    </MenuItem>
                </Menu>

                <Menu Height="18">
                    <MenuItem Header="Consultas">
                        <MenuItem x:Name= "cPedidosMenuItem" Header="Consulta Pedidos" Click="cPedidosMenuItem_Click"/>
                        <MenuItem x:Name= "cSuplidoresMenuItem" Header="Consulta _Suplidores" Click="cSuplidoresMenuItem_Click" />
                        <MenuItem x:Name= "cProductosMenuItem" Header="_Consulta Producto" Click="cProductosMenuItem_Click" />
                    </MenuItem>
                </Menu>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
